{
    "name": "avz",
    "displayName": "AvZ",
    "description": "A VSCode extension for the PvZ TAS framework - AsmVsZombies.",
    "version": "0.7.4",
    "type": "module",
    "engines": {
        "vscode": "^1.75.0"
    },
    "publisher": "vector-wlc",
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vector-wlc/AvZVSCodeExtenson"
    },
    "keywords": [
        "avz",
        "pvz"
    ],
    "icon": "image/avz.ico",
    "main": "./out/extension.js",
    "l10n": "./l10n",
    "contributes": {
        "commands": [
            {
                "command": "AsmVsZombies.runScriptInTerminal",
                "title": "%AsmVsZombies.runScriptInTerminal.title%",
                "icon": "$(play)"
            },
            {
                "command": "AsmVsZombies.runScript",
                "title": "%AsmVsZombies.runScript.title%"
            },
            {
                "command": "AsmVsZombies.updateAvz",
                "title": "%AsmVsZombies.updateAvz.title%"
            },
            {
                "command": "AsmVsZombies.openAvzTutorial",
                "title": "%AsmVsZombies.openAvzTutorial.title%"
            },
            {
                "command": "AsmVsZombies.setAvzDir",
                "title": "%AsmVsZombies.setAvzDir.title%"
            },
            {
                "command": "AsmVsZombies.getPvzExePath",
                "title": "%AsmVsZombies.getPvzExePath.title%"
            },
            {
                "command": "AsmVsZombies.getPvzProcessId",
                "title": "%AsmVsZombies.getPvzProcessId.title%"
            },
            {
                "command": "AsmVsZombies.downloadAvzExtension",
                "title": "%AsmVsZombies.downloadAvzExtension.title%"
            },
            {
                "command": "AsmVsZombies.buildAvz",
                "title": "%AsmVsZombies.buildAvz.title%"
            },
            {
                "command": "AsmVsZombies.showAvzInfo",
                "title": "%AsmVsZombies.showAvzInfo.title%"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == cpp",
                    "command": "AsmVsZombies.runScriptInTerminal",
                    "group": "navigation"
                }
            ],
            "editor/title/run": [
                {
                    "when": "resourceLangId == cpp",
                    "command": "AsmVsZombies.runScriptInTerminal",
                    "group": "navigation"
                }
            ]
        },
        "snippets": [
            {
                "language": "cpp",
                "path": "./snippets/snippets.json"
            }
        ],
        "configuration": {
            "title": "AvZ",
            "properties": {
                "avzConfigure.avzDir": {
                    "type": "string",
                    "default": "",
                    "description": "%avzConfigure.avzDir.description%"
                },
                "avzConfigure.pvzExeName": {
                    "type": "string",
                    "default": "PlantsVsZombies.exe",
                    "description": "%avzConfigure.pvzExeName.description%"
                },
                "avzConfigure.compileOptions": {
                    "type": "array",
                    "default": [
                        "-g",
                        "-Wall"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "description": "%avzConfigure.compileOptions.description%"
                },
                "avzConfigure.avzRunScriptCmd": {
                    "type": "string",
                    "default": "set \"PATH=__AVZ_DIR__/MinGW/bin;%PATH%\" && \"__AVZ_DIR__/MinGW/bin/g++\" __COMPILER_CMD__ && \"__AVZ_DIR__/bin/injector.exe\"",
                    "description": "%avzConfigure.avzRunScriptCmd.description%"
                },
                "avzConfigure.downloadSource": {
                    "type": "string",
                    "default": "GitLab",
                    "enum": [
                        "GitHub",
                        "GitLab",
                        "Gitee"
                    ],
                    "description": "%avzConfigure.downloadSource.description%"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src .",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/glob": "^9.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.9.1",
        "@types/vscode": "^1.75.0",
        "@vscode/l10n-dev": "^0.0.35",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.39.1",
        "glob": "^11.0.3",
        "globals": "^16.5.0",
        "mocha": "^11.7.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    }
}
